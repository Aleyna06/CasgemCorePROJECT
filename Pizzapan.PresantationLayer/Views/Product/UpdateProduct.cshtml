@model Pizzapan.EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün Güncelleme Sayfası </h1>
<form method="post">
    <input type="hidden" asp-for="CategoryID" />

    <input type="text" class="form-control" asp-for="Name" style="background-color:darkgray" />
    <br />
    <input type="text" class="form-control" asp-for="Description" style="background-color:darkgray" />
    <br />
    <input type="text" class="form-control" asp-for="Price" style="background-color:darkgray" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>